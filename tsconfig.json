{
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react-jsx",
        "moduleResolution": "Node",
        "paths": {
            "~*": [
                "./*"
            ]
        },
        "strict": true,
        "target": "ES2022",
        "esModuleInterop": true,
        "module": "es2022",
        "types": ["vite/client"]
    },
    "include": [
        "src/**/*"
    ]
}